@model SpotifyWebApplication.Models.Filter
@{
    ViewBag.Title = "Фільтри";
    Layout = "_Layout";
}

<h2>Фільтри</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Filter1">
            <p> 1.Знайти артистів, яким належить альбом, що містить пісню з такою назвою:</p>
            <div class="form-group">
                <input asp-controller="Filter1" placeholder="Введіть назву" type="text" id="filter01"
                       name="filter01" required minlength="1" size="20"
                       oninvalid="this.setCustomValidity('Введи щось')"
                       oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <input type="submit" value="Пошук"/>
            </div>
        </form>
        <form asp-action="Filter2">
            <p> 2.Знайти альбоми, у яких середня довжина пісні більше: </p>
            <div class="form-group">
                <input asp-controller="Filter2" placeholder="хв" type="number" id="filter02m"
                       name="filter02m" required min="0" size="5"
                       value="0"
                       oninvalid="this.setCustomValidity('Введи число')"
                       oninput="this.setCustomValidity('')">
                <span>:</span>
                <input asp-controller="Filter2" placeholder="с" type="number" id="filter02s"
                       name="filter02s" required min="0" size="5"
                       value="0"
                       oninvalid="this.setCustomValidity('Введи число')"
                       oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <input type="submit" value="Пошук"/>
            </div>
        </form>

        <form asp-action="Filter3">
            <p> 3.Знайти плейлісти, у яких довжина більше: </p>
            <div class="form-group">
                <input asp-controller="Filter3" placeholder="хв" type="number" id="filter03m"
                       name="filter03m" required min="0" size="5"
                       value="0"
                       oninvalid="this.setCustomValidity('Введи число')"
                       oninput="this.setCustomValidity('')">
                <span>:</span>
                <input asp-controller="Filter3" placeholder="с" type="number" id="filter03s"
                       name="filter03s" required min="0" size="5"
                       value="0"
                       oninvalid="this.setCustomValidity('Введи число')"
                       oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <input type="submit" value="Пошук"/>
            </div>
        </form>
        <form asp-action="Filter4">
            <p> 4.Знайти пісні, у яких кількість артистів більше: </p>
            <div class="form-group">
                <input asp-controller="Filter4" placeholder="Введіть число" type="number" id="number"
                       name="number" required min="1" size="20" value="1"
                       oninvalid="this.setCustomValidity('Введи число')"
                       oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <input type="submit" value="Пошук"/>
            </div>
        </form>
        <form asp-action="Filter5">
            <p> 5.Знайти альбоми, у яких релізер: </p>
            <div class="form-group">
                <input asp-controller="Filter5" placeholder="Введіть релізера" type="text" id="publisherName"
                       name="publisherName" required minlength="1" size="20"
                       oninvalid="this.setCustomValidity('Введи щось')"
                       oninput="this.setCustomValidity('')">
            </div>
            <div class="form-group">
                <input type="submit" value="Пошук"/>
            </div>
        </form>
        
        <form asp-action="Filter5"> -- aaaaaaaaaaaaaaaaaaaaaaaaaaaa
                    <p> 6.Знайти плейлісти, що містять усі пісні артистаа: </p>
                    <div class="form-group">
                        <input asp-controller="Filter6" placeholder="Введіть артиста" type="text" id="artistName"
                               name="artistName" required minlength="1" size="20"
                               oninvalid="this.setCustomValidity('Введи щось')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Пошук"/>
                    </div>
                </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}