@model IEnumerable<SpotifyWebApplication.Song>

@{
    ViewData["Title"] = "Пісні " + @ViewBag.AlbumName;
}

<h1>Пісні @ViewBag.state @ViewBag.AlbumName</h1>

<div class="author-photo">
    <img src="@ViewBag.LinkToImage" width="240" height="240" alt="Avatar" style="border-radius: 50%;">
</div>

<p>
    <!-- <a asp-action="Create" asp-route-id="@ViewBag.AlbumId">Додати нову пісню</a> -->
    @Html.ActionLink("Додати нову пісню", "Create", new {albumId = @ViewBag.AlbumId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Duration) -->
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.Duration/60):@(item.Duration % 60)
                <!-- @Html.DisplayFor(modelItem => item.Duration) -->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
