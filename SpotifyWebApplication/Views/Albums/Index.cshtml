@model IEnumerable<SpotifyWebApplication.Album>

@{
    ViewData["Title"] = "Альбоми";
}

<h1>Альбоми</h1>

<p>
    <!-- <a asp-action="Create" asp-route-id="@ViewBag.ArtistId">Додати новий альбом</a> -->
    @Html.ActionLink("Додати новий альбом", "Create", new {albumId = @ViewBag.AlbumId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <!-- <th>
                @Html.DisplayNameFor(model => model.PhotoLink)
            </th> -->
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <!-- <td>
                @Html.DisplayFor(modelItem => item.PhotoLink)
            </td> -->   
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Докладніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
