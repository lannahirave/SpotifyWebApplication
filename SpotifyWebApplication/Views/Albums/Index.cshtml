@model IEnumerable<SpotifyWebApplication.Album>

@{
    ViewData["Title"] = "Альбоми " + @ViewBag.ArtistName;
}

<h1>Альбоми @ViewBag.ArtistName</h1>

<div class="author-photo">
    <img src="@ViewBag.LinkToImage" width="240" height="240" alt="" style="border-radius: 50%;">
</div>
<p>
    <!-- <a asp-action="Create" asp-route-id="@ViewBag.ArtistId">Додати новий альбом</a> -->
    @Html.ActionLink("Додати новий альбом", "Create", new {artistId = @ViewBag.ArtistId})
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <!-- <th>
            @Html.DisplayNameFor(model => model.PhotoLink)
        </th> -->
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.PhotoLink" width="20" height="20" alt="" style="border-radius: 50%;">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <!-- <td>
                @Html.DisplayFor(modelItem => item.PhotoLink)
            </td> -->
            <td>
                @(item.ReleaseDate.Date.ToShortDateString())
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Докладніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>